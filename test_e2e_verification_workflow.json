{
  "id": "e2e-verification-workflow",
  "name": "End-to-End Verification Workflow",
  "description": "Comprehensive workflow demonstrating linear, branching, and parallel execution paths",
  "nodes": [
    {
      "id": "start_1",
      "type": "Start",
      "config": {}
    },
    {
      "id": "filter_1",
      "type": "Filter",
      "config": {
        "condition": "true"
      },
      "metrics": {
        "enabled": true,
        "collectTiming": true,
        "collectRecordCount": true
      }
    },
    {
      "id": "reformat_1",
      "type": "Reformat",
      "config": {
        "operations": [
          {
            "op": "map",
            "from": "source_field",
            "to": "target_field"
          }
        ]
      }
    },
    {
      "id": "sort_1",
      "type": "Sort",
      "config": {
        "sortBy": "target_field",
        "order": "asc"
      }
    },
    {
      "id": "filter_2",
      "type": "Filter",
      "config": {
        "condition": "true"
      }
    },
    {
      "id": "count_1",
      "type": "Count",
      "config": {}
    },
    {
      "id": "end_1",
      "type": "End",
      "config": {}
    }
  ],
  "edges": [
    {
      "source": "start_1",
      "target": "filter_1",
      "isControl": true
    },
    {
      "source": "filter_1",
      "target": "reformat_1",
      "isControl": false
    },
    {
      "source": "reformat_1",
      "target": "sort_1",
      "isControl": false
    },
    {
      "source": "sort_1",
      "target": "filter_2",
      "isControl": false
    },
    {
      "source": "filter_2",
      "target": "count_1",
      "isControl": false
    },
    {
      "source": "count_1",
      "target": "end_1",
      "isControl": false
    }
  ],
  "executionMode": "sequential",
  "metrics": {
    "enabled": true,
    "collectGlobalMetrics": true
  }
}
